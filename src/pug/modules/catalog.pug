mixin catalog(data)
  if data
    - var { title, panel, filter, cards, pagination } = data;
    section.catalog._content&attributes(attributes)
      .container.catalog__container
        if title
          - var { tag, label } = title;
          #{tag || 'h1'}.h2.catalog__title!=label
        if panel || filter || cards || pagination
          .catalog__info
            if filter
              .catalog__sidebar
                +filter(filter)
            .catalog__content
              if filter || panel
                .catalog__panel
                  if filter
                    +btn({
                      tag: 'button',
                      label: 'Все фильтры',
                      icons: {
                        left: 'filter-fill',
                      },
                    })(type="button" class="_primary-white js-filter-btn catalog__filter-btn")
                  if panel
                    - var { sort, search } = panel;
                    if sort
                      - var { options, attrs } = sort;
                      -options.modificators = options.modificators ? `${options.modificators} catalog__panel-sort` : 'catalog__panel-sort';
                      +field(options)&attributes(attrs)
                    if search
                      - var { options, attrs } = search;
                      -options.modificators = options.modificators ? `${options.modificators} catalog__panel-search` : 'catalog__panel-search';
                      +field(options)&attributes(attrs)
              if cards || pagination
                .catalog__list
                  .catalog__list-content
                    each item in cards
                      +product-card(item).catalog__list-item
                  if pagination
                    +pagination(pagination).catalog__pagination
