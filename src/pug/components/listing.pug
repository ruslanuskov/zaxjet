mixin listing(data)
  if data
    - var { title, text, list } = data;
    .listing&attributes(attributes)
      if title
        - var { tag, label } = title;
        #{tag || 'h4'}.h3.listing__title!=label
      if text
        .rte.listing__text!=text
      if list
        ul.listing__list
          each item in list
            li.listing__item!=item
